{
    "$schema": "http://json.schemastore.org/proxies",
    "proxies": {
        "GetTheProducts": {
            "matchCondition": {
                "methods": [ "GET" ],
                "route": "/api/GetProducts"
            },
            "backendUri": "http://serverlessohproduct.trafficmanager.net"
        },
        "GetTheProduct":
        {
            "matchCondition": {
                "methods":["GET"],
                "route": "/api/GetRating/{request.querystring.productId}"
            },
            "backendUri": "http://serverlessohproduct.trafficmanager.net"
        }
    }
}