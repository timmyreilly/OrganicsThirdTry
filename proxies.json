{
    "$schema": "http://json.schemastore.org/proxies",
    "proxies": {
        "GetTheProducts": {
            "matchCondition": {
                "methods": [
                    "GET"
                ],
                "route": "/api/GetProducts"
            },
            "backendUri": "http://serverlessohproduct.trafficmanager.net/api/GetProducts"
        },
        "GetTheProduct": {
            "matchCondition": {
                "methods": [
                    "GET"
                ],
                "route": "/api/GetProduct"
            },
            "backendUri": "http://serverlessohproduct.trafficmanager.net/api/GetProduct?productId={request.querystring.productId}"
        },
        "GetTheUser": {
            "matchCondition": {
                "methods": [
                    "GET"
                ],
                "route": "/api/GetUser"
            },
            "backendUri": "http://serverlessohproduct.trafficmanager.net/api/GetUser?userId={request.querystring.userId}"
        }
    }
}